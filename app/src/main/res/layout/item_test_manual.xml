<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LinearLayoutMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/basic_padding_double_">

    <ImageView
        android:id="@+id/imgViewStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:background="@drawable/ic_thump_up" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <com.officework.customViews.IconView
            android:id="@+id/imgIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/txtViewTestName"
            style="@style/Widget.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="@string/app_name"
             />

        <TextView
            android:id="@+id/txtViewDot"
            android:layout_width="80dp"
            android:layout_height="6dp"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="@dimen/basic_padding"
            android:background="@drawable/rounded_red"
            android:visibility="gone" />

    </LinearLayout>
</FrameLayout>