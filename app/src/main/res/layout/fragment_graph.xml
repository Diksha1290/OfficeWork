<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center|left"
        android:layout_weight="0.5"
        android:background="@color/product_gray"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/basic_padding"
            android:gravity="center|left"
            android:orientation="vertical">

            <TextView
                style="@style/Text_Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/txtTabNamesBattery"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txtViewTotalSale"
                style="@style/Text_Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="60 %"
                android:textColor="@color/white" />
        </LinearLayout>

        <com.dlazaro66.wheelindicatorview.WheelIndicatorView
            android:id="@+id/wheel_indicator_view"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center|left"
            android:layout_margin="@dimen/basic_padding"
            android:layout_weight="0.1"
            app:filledPercent="40"
            app:itemsLineWidth="7dp" />

    </FrameLayout>

</LinearLayout>