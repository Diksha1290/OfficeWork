<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lighFunLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/light"
        style="@style/Widget.TextViewHeadingNormalText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgViewLigtSensor"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/txtManualLightSensor_test" />


    <com.officework.customViews.IconView
        android:id="@+id/imgViewLigtSensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="98dp"
        app:srcCompat="@drawable/ic_light_blue_svg_168" />

</RelativeLayout>