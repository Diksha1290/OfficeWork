<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.20">

        <ImageView
            android:id="@+id/imgViewBarCodeDash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/txtViewBarCodeDash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgViewBarCodeDash"
            android:gravity="center_horizontal"
            android:textColor="@color/white" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.10"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="@string/dashboardHeader"
        android:textColor="@color/yellow_font_Color"
        android:textSize="@dimen/text_normal"
        android:visibility="visible" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.57">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:id="@+id/layoutAutomatedTest"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/imgViewAutomatedTest"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:src="@drawable/ic_automated_dash" />

                    <TextView
                        android:id="@+id/txtViewAutomatedTest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center"
                        android:padding="@dimen/basic_padding"
                        android:text="@string/txtAutomatedTest"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="18dp" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="6dp"
                    android:background="@color/disabledGray_opaque" />

                <LinearLayout
                    android:id="@+id/layoutManualTest"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/imgViewManualTest"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:src="@drawable/ic_manual_dash" />

                    <TextView
                        android:id="@+id/txtViewManualTest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center"
                        android:padding="@dimen/basic_padding"
                        android:text="@string/txtManualTest"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="18dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/basic_padding"
                android:gravity="center"
                android:visibility="gone"
                android:weightSum="1">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="12dp"
                    android:layout_weight="0.4"
                    android:background="@color/disabledGray_opaque" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="0.4"
                    android:background="@color/disabledGray_opaque" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible"
                android:weightSum="1">

                <LinearLayout
                    android:id="@+id/layoutDeviceInfoFrag"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/imgViewDeviceInfoFrag"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:src="@drawable/ic_deviceinfo_dash" />

                    <TextView
                        android:id="@+id/txtViewDeviceInfoFrag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center"
                        android:padding="@dimen/basic_padding"
                        android:text="@string/txtDeviceInfo"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="18dp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.10"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imgViewDataSync"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="0.15" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.85"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSyncData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tvShowServerTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/white" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.03"
        android:background="@color/yellow_font_Color">

        <TextView
            android:id="@+id/txtViewTermCondition"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:text="@string/textFooter"
            android:textColor="@color/Black" />

    </LinearLayout>

</LinearLayout>