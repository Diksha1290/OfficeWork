<RelativeLayout
    android:backgroundTint="@android:color/darker_gray"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/barroLay">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/barovalue"
        android:layout_margin="25dp"
        android:textSize="30sp"
        />
    <com.officework.customViews.GaugeView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/gauge_view"
        app:innerCircleColor="@color/white"
        app:outerCircleColor="@color/brown"
        app:textUnitColor="@color/white"
        app:textValueColor="@color/white"
        app:showScale="true"
        app:subdivisions="3"
        app:showRanges="true"
        app:showRangeText="false"
        app:showOuterShadow="false"
        app:showOuterRim="true"
        app:showOuterBorder="false"
        app:showNeedle="true"
        app:showInnerRim="false"
        app:scaleEndValue="300"
        app:rangeValues="@array/rangeValues"
        android:layout_margin="16dp"
        android:layout_centerInParent="true"/>

</RelativeLayout>
