<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardViewExceptionTable"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                android:text="@string/txtUDI"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/txtViewUDI"

                android:layout_width="0dp"

                android:layout_height="wrap_content"
                android:layout_weight="0.65"
                android:background="@color/alpha_White"
                android:singleLine="false"
                android:text="@string/txtUDI"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:weightSum="1">


            <TextView
                android:layout_width="0dp"

                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                android:text="@string/txtMethodName"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/txtViewMethodName"
                android:layout_width="0dp"

                android:layout_height="wrap_content"
                android:layout_weight="0.65"
                android:background="@color/alpha_White"
                android:singleLine="false"
                android:text="@string/txtUDI"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:weightSum="1">


            <TextView
                android:layout_width="0dp"

                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                android:text="@string/txtTimeStamp"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/txtViewTimeStamp"

                android:layout_width="0dp"

                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:background="@color/alpha_White"
                android:singleLine="false"
                android:text="@string/txtUDI"
                android:textSize="16dp" />
        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>