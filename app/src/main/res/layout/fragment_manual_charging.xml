<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chargingLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <com.officework.customViews.IconView
        android:id="@+id/imgViewChargingPort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="98dp"
        app:srcCompat="@drawable/ic_charging_blue_svg_128" />

    <TextView
        style="@style/Widget.TextViewHeadingNormalText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/txtTitleCharging"
        android:textSize="@dimen/about_us"
        />

</LinearLayout>