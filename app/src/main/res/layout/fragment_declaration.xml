<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/submition"
        android:layout_alignParentBottom="true">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/checkbox"
        android:layout_alignParentTop="true"

        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        >

    </androidx.recyclerview.widget.RecyclerView>

    <ProgressBar
        android:id="@+id/progressBarMediuma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:gravity="top"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rel_btn"
        android:textSize="@dimen/about_us"
        android:text="@string/txt_confirmation"
        />

<!--    <TextView-->
<!--        android:id="@+id/txt_confirm"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_below="@id/checkbox"-->
<!--        android:layout_marginLeft="@dimen/_10sdp"-->
<!--        android:layout_marginRight="@dimen/_20sdp"-->
<!--        android:layout_toRightOf="@id/checkbox"-->
<!--        android:text="@string/txt_confirmation"-->
<!--        android:textSize="@dimen/_12sdp" />-->

    <RelativeLayout
        android:id="@+id/rel_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        >



        <Button
            android:layout_marginBottom="20dp"
            android:id="@+id/btn_nexta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/txt_mid"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/blue_bg"
            android:minWidth="@dimen/_40sdp"
            android:minHeight="@dimen/_20sdp"
            android:paddingLeft="@dimen/_32sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingRight="@dimen/_32sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:text="@string/textNext"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/about_us"

            />






        <TextView
            android:id="@+id/txt_mid"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" />

        <Button
            android:layout_marginBottom="20dp"
            android:id="@+id/btn_previousa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txt_mid"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/blue_bg"
            android:minWidth="@dimen/_40sdp"
            android:minHeight="@dimen/_20sdp"
            android:paddingLeft="@dimen/_12sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingRight="@dimen/_12sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:text="@string/previous"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/about_us"

            />
    </RelativeLayout>


</RelativeLayout>
</RelativeLayout>