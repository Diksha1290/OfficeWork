<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_100sdp"
    android:layout_gravity="center"

    android:layout_height="@dimen/_100sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/select_image_item"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_90sdp"
        android:background="@drawable/ic_do"
        android:text="\n\nID Proof*"
        android:textAlignment="center"
        android:textSize="@dimen/_16sdp"
        android:layout_gravity="center"
        android:drawableBottom="@drawable/ic_add_image"
        android:layout_margin="@dimen/activity_horizontal_margin"/>


    <RelativeLayout
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_gravity="center"
        android:padding="@dimen/_10dp">
        <ImageView
            android:id="@+id/show_image_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"

            android:src="@drawable/ic_person"
            android:layout_gravity="center"
            android:background="@color/grayy"

            />


    </RelativeLayout>
    <ImageButton
        android:id="@+id/btn_close_item"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:scaleType="center"
        android:background="#00000000"
        android:layout_gravity="right"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_remove_image"/>


</FrameLayout>