<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />

            <stroke android:width="1dip" android:color="@color/yellow_font_Color" />

            <gradient android:angle="-90" android:endColor="@color/yellow_font_Color" android:startColor="@color/yellow_font_Color" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />

            <stroke android:width="1dip" android:color="@color/yellow_font_Color" />

            <gradient android:angle="-90" android:endColor="@color/yellow_font_Color" android:startColor="@color/yellow_font_Color" />
        </shape>
    </item>

</selector>